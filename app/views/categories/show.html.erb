<div class="projects">
	<% @category.projects.reverse_each do |project| %>
	<div class="row">
		<div class='col-md-12'>
			<div class="col-md-2">
				<%= image_tag("Timeline_Branch.jpg", :alt => "a timeline section", :size => "156x215") %>
			</div>
			<div class='col-md-4'>
				<div class="pic">
					<img src="%3C%=%20project.thumburl%20%%3E" style="width:200px; height:200px">
				</div>
			</div>
			<div class="descript">
				<div class='col-md-6'>
					<h2>
						<%= project.name %>
					</h2>
					<p>
						<%= project.description %>
					</p>
					<div class="caption">
						<span><%= link_to "Edit", edit_category_project_path(category_id: @category.id, id: project.id) %></span> 
						<span><%= link_to 'Show', category_project_path(category_id: @category.id, id: project.id) %></span>
						<span><%= link_to 'Delete', category_project_path(category_id: @category.id, id: project.id), 
															method: :delete, 
															data: {confirm: 'Are you sure?' } %></span>
					</div>
				</div>
			</div>
		</div>
	</div>
	<% end %>
</div>
<p>
	<br>
	<%= link_to 'New Project', new_category_project_path(category_id: @category.id) %>
</p>
