<!DOCTYPE html>
<html>

<%= stylesheet_link_tag "projects_index.scss" %>
<div class="projects">

      
        <% @projects.reverse_each do |project| %>

        <div class="row">
          <div class = 'col-md-12'>
          <div class="col-md-2">
              <%= image_tag("Timeline_Branch.jpg", :alt => "a timeline section", :size => "156x215") %>
        </div>
                  <div class='col-md-4'>
                    <div class="pic">
                        <img src= <%= project.thumburl %> style="width:200px; height:200px" >
                      </div>
                    </div>
                  <div class = "descript">
                  <div class = 'col-md-6'>
                    <h2><%= project.name %></h2>
                      <p><%= project.description %></p>
                    <div class="caption">

                          <span><%= link_to "Edit", edit_project_path(project.id) %></span>
                          <span><%= link_to 'Show', project %></span>
                          <span><%= link_to 'Delete', project_path(project), 
                                    method: :delete, 
                                    data: {confirm: 'Are you sure?' } %></span>
                    </div>
                </div>
            </div>
    </div>
    </div>
    <% end %>
        </div>




<br>
<%= link_to 'New Project', new_project_path %>


            
    </html>